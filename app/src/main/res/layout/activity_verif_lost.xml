<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#52FFFFFF"
    android:backgroundTint="#52FFFFFF"
    tools:context=".verifLost"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/blue_button"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:text="@string/please_verify_your_provided_description"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/fiii"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mainm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="@string/main_category"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/main_Categ"
                android:layout_width="164dp"
                android:layout_height="match_parent"
                android:layout_marginStart="88dp"
                android:text=""
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/fiii"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mainml"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"

                android:text="@string/sub_category"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Sub_Categ"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_marginStart="88dp"

                android:text=""
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/fiii"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colorText"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="@string/color"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/color"
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:layout_marginStart="88dp"
                android:text=""
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/fiii"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="107dp"
                android:layout_height="51dp"
                android:layout_marginStart="10dp"
                android:text="@string/lost_date"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/date"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:layout_marginStart="88dp"

                android:text=""
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/fiii"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/QuestionReward"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"

                android:text="@string/reward"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/QR"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:layout_marginStart="88dp"

                android:text=""
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/fiii"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/locationText"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="@string/lost_location"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"

                android:text=""
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/mm"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:onClick="submit"
                android:text="@string/submit"
                android:textColor="@color/cardview_light_background"
                android:textSize="25sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
