<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#52FFFFFF"
    tools:context=".codeverif"
    tools:ignore="ExtraText">

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#52FFFFFF"
        android:padding="30dp"
        >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="277dp"
        android:layout_height="205dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="65dp"
        android:contentDescription="@string/image"
        android:src="@drawable/insecreptionphoto" />


        <TextView
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/blue_button"
            android:text="@string/a_six_digit_otp_has_sent_to_n_your_number_please_enter_to_n_verify"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/veriff"
            android:layout_marginTop="25sp"
            android:textSize="30sp"
            android:layout_width="250dp"
            android:layout_marginStart="20dp"
            android:layout_height="60dp"
            android:textColor="@color/cardview_light_background"
            android:background="@color/blue_button"
            android:autofillHints=""
            android:inputType="number"
            tools:ignore="LabelFor" />

        <Button

            android:background="#fece2f"
            android:onClick="verify"
            android:layout_marginStart="20dp"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="19sp"
            android:text="@string/verify"
            android:textSize="21sp"
            android:textColor="@color/cardview_light_background" />

        <ProgressBar
            android:layout_marginTop="10dp"
            android:id="@+id/progress_circular"
            android:layout_width="291dp"
            android:layout_height="79dp"
           />
    </LinearLayout>


</ScrollView>